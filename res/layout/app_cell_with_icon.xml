<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="65px"
	android:layout_height="78px" android:layout_weight="1" android:gravity="center_horizontal">

	<ImageView android:layout_width="48px" android:id="@+id/image"
		android:layout_height="48px" android:scaleType="fitCenter"></ImageView>

	<TextView android:layout_width="fill_parent" android:id="@+id/name"
		android:text="NAME" android:layout_height="wrap_content" android:padding="0px"
		android:layout_weight="1" android:textSize="12px" android:gravity="center"></TextView>
</LinearLayout>
