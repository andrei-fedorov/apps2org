<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="65dip"
	android:layout_height="78dip" android:layout_weight="1" android:gravity="center_horizontal">

	<ImageView android:layout_width="48dip" android:id="@+id/image"
		android:layout_height="48dip" android:scaleType="fitCenter"></ImageView>

	<TextView android:layout_width="fill_parent" android:id="@+id/name"
		android:text="NAME" android:layout_height="wrap_content" android:padding="0dip"
		android:layout_weight="1" android:textSize="12dip" android:gravity="center"></TextView>
</LinearLayout>
